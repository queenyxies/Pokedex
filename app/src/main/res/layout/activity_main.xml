<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/ash"
    android:id="@+id/ll"
    >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="7dp"
                android:id="@+id/et"
                android:layout_width="0dp"
                android:layout_height=".3in"
                android:layout_weight="3"
                android:hint="Enter Name"
                android:textColorHint="#807A7A"
                android:textColor="@color/black"
                android:background="@drawable/etxt"
                android:padding="20px"/>

            <ImageView
                android:id="@+id/sbt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:layout_margin="5dp"
                android:background="@drawable/search"
                android:layout_gravity="center"
                android:textColor="#B4FFFFFF"
                />

        </LinearLayout>

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50px"
        android:text="Name"
        android:textStyle="bold"
        android:textSize="40sp"
        android:textColor="#FBFBFB"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


            <TextView
                android:id="@+id/type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Type"
                android:textSize="30sp"
                android:layout_marginLeft="50px"
                android:textColor="#FFFFFF"/>


        <TextView
            android:id="@+id/id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Index ID"
            android:textSize="25sp"
            android:gravity="right"
            android:textColor="#B0E5E5F5"
            android:layout_marginRight="50px"/>


    </LinearLayout>








            <ImageView
                android:id="@+id/img"
                android:layout_width="2.3in"
                android:layout_height="1.5in"
                android:layout_gravity="center"
                android:visibility="gone"
                 />



<LinearLayout
    android:id="@+id/lldet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="610px"
    android:orientation="vertical">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Base Stats"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="#B0E5E5F5"
            android:layout_marginLeft=".2in"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="HP:"
            android:textSize="20sp"
            android:layout_marginLeft=".2in"
            android:textColor="#B0E5E5F5"/>

        <TextView
            android:id="@+id/hp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textSize="20sp"
            android:layout_gravity="right"
            android:text="000"
            android:layout_marginRight=".23in"
            android:textColor="#B0E5E5F5"/>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/pbhp"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="2in"
        android:layout_height=".05in"
        android:layout_gravity="center"
        />




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft=".2in"
            android:padding="5px"
            android:text="Attack: "
            android:textColor="#B0E5E5F5"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/att"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:padding="5px"
            android:text="000"
            android:layout_marginRight=".23in"
            android:gravity="right"
            android:textColor="#B0E5E5F5"/>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/pbatt"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="2in"
        android:layout_height=".05in"
        android:layout_gravity="center"
        />






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft=".2in"
            android:layout_marginRight=".2in"
            android:padding="5px"
            android:text="Defense: "
            android:textColor="#B0E5E5F5"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/def"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:padding="5px"
            android:text="000"
            android:layout_marginRight=".23in"
            android:gravity="right"
            android:textColor="#B0E5E5F5"/>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/pbdef"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="2in"
        android:layout_height=".05in"
        android:layout_gravity="center"
        />




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft=".2in"
            android:layout_marginRight=".2in"
            android:padding="5px"
            android:text="Special Attack: "
            android:textColor="#B0E5E5F5"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textSize="20sp"
            android:layout_gravity="right"
            android:text="000"
            android:layout_marginRight=".23in"
            android:textColor="#B0E5E5F5"/>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/pbsa"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="2in"
        android:layout_height=".05in"
        android:layout_gravity="center"
        />





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft=".2in"
            android:layout_marginRight=".2in"
            android:padding="5px"
            android:text="Special Defense:"
            android:textColor="#B0E5E5F5"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textSize="20sp"
            android:layout_gravity="right"
            android:text="000"
            android:layout_marginRight=".23in"
            android:textColor="#B0E5E5F5"/>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/pbsd"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="2in"
        android:layout_height=".05in"
        android:layout_gravity="center"
        />




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft=".2in"
            android:layout_marginRight=".2in"
            android:padding="5px"
            android:text="Speed: "
            android:textColor="#B0E5E5F5"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/spd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textSize="20sp"
            android:layout_gravity="right"
            android:text="000"
            android:layout_marginRight=".23in"
            android:textColor="#B0E5E5F5"/>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/pbspd"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="2in"
        android:layout_height=".05in"
        android:layout_gravity="center"
        />


<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="20px">

    <ImageButton
        android:id="@+id/cbt"
        android:layout_width="1.8in"
        android:layout_height=".25in"
        android:background="@null"
        android:scaleType="fitXY"
        android:layout_gravity="center"
        android:src="@drawable/znormal_bg" >
    </ImageButton>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:clickable="false"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="CLEAR" >
    </TextView>
</FrameLayout>

</LinearLayout>


</LinearLayout>